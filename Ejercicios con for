public class CuentaRegresiva {

    public static void main(String[] args) {
        
        System.out.println("Iniciando la cuenta regresiva desde 10:");
        
        for (int i = 10; i >= 1; i--) {
            System.out.println(i);
        }
        
        System.out.println("Â¡Fin de la cuenta regresiva!");
    }
}
