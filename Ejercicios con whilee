public class ParesWhile {

    public static void main(String[] args) {
        int numeroPar = 2;
        
        System.out.println("Mostrando n√∫meros pares del 2 al 20:");
        while (numeroPar <= 20) {

            System.out.println(numeroPar);
            

        }
        
        System.out.println("Proceso completado.");
    }
}
